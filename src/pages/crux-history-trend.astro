---
import Sectionhead from "@components/sectionhead.astro";
import { ChartContainer } from "@components/crux-history-chart/index";
import Container from "@components/container.astro";
import Layout from "@layouts/Layout.astro";
import pageData from 'assets/crux-history-urls.json';
import {getValidCruxData} from "@components/cwv-data-utils/data-clean";

// const siteData =cruxHistorySitesData.concat(CruxHistoryOtherSitesData).filter((site)=>!site.error && site?.record?.metrics);
const pageHistoryData = getValidCruxData(pageData);

---

<Layout title="Crux History Trend">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Crux History Trend</Fragment>
      <Fragment slot="desc">Trend chart for selected urls</Fragment>
    </Sectionhead>
    <div class="flex flex-col max-w-4xl mt-8">
      <ChartContainer client:only data={pageHistoryData} />
    </div>
  </Container>  
</Layout>
